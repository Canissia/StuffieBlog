<% if(stuffies != null ) { %>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%- stuffies.name %></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/uploads/<%- stuffies.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- stuffies.name %>" Loading="lazy">
        </div>

        <div class="col-12 col-md-7">
            <div class="row">
                <div class="col-12"><h1><%- stuffies.name %></h1></div>
                <div class="col-12 mb-4 text-success"><i class="bi bi-tag"></i><%- stuffies.category %></div>
                <div class="col-12" style="white-space: pre-line;">
                    <h4 class="text-primary">Color</h4>
                    <%- stuffies.color %>
                <div class="col-12" style="white-space: pre-line;">
                    <h4 class="text-primary">Stuffie Description</h4>
                    <%- stuffies.description %>
                </div>
            </div>
        </div>
    </div>
    <% } else { %>
        <p>No Stuffies Found.</p>
<% } %>
</div>